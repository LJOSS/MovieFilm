<resources>
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:textViewStyle">@style/Text</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Text" parent="TextAppearance.AppCompat">
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/headerTextColor</item>
    </style>

    <style name="Text.Bold" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Medium" parent="TextAppearance.AppCompat">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Text.Small" parent="TextAppearance.AppCompat">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="Text.Header">
        <item name="android:textAlignment">textStart</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">2</item>
        <item name="android:textColor">@color/headerTextColor</item>
    </style>

</resources>