<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph.xml"
    app:startDestination="@id/movieListFragment">

    <fragment
        android:id="@+id/movieListFragment"
        android:name="com.example.movie_project.presentation.movie_list.MovieListFragment"
        android:label="@string/movieListTitle"
        tools:layout="@layout/fragment_movie_list">
        <action
            android:id="@+id/toMovieDetails"
            app:destination="@id/movieDetailFragment">
            <argument
                android:name="MOVIE_ID"
                app:argType="long" />
        </action>
    </fragment>
    <fragment
        android:id="@+id/movieDetailFragment"
        android:name="com.example.movie_project.presentation.movie_detail.MovieDetailFragment"
        android:label="@string/movieInfo"
        tools:layout="@layout/fragment_movie_detail">

        <argument
            android:name="MOVIE_ID"
            app:argType="long" />
    </fragment>

</navigation>